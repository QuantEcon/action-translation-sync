{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "../src/translator.ts",
    "../src/parser.ts",
    "../src/heading-map.ts",
    "../src/types.ts",
    "../src/language-config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../src/__tests__",
    "../src/index.ts",
    "../src/inputs.ts",
    "../src/diff-detector.ts",
    "../src/file-processor.ts"
  ]
}
